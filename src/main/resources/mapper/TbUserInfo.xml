<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.demo.aop.repository.TbUserInfoRepository">

    <resultMap id="TbUserInfoResultMap" type="TbUserInfo">
        <id property="id" column="ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="name" column="NAME"/>
        <result property="email" column="EMAIL"/>
    </resultMap>

    <insert id="insertTbUserInfo" parameterType="tbUserInfo">
        INSERT INTO TB_USER_INFO (USER_ID, NAME)
        VALUES (#{userId}, #{name})
    </insert>
    <select id="getUserInfoById" parameterType="String" resultMap="TbUserInfoResultMap">
        SELECT *
        FROM TB_USER_INFO
        WHERE USER_ID = #{userId}
    </select>


</mapper>
